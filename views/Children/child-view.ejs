<%- include('../layout') %>

<h1>Details</h1>
<table class="table table-bordered mt-4">
  <thead class="thead-dark">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>MiddleName</th>
      <th>LastName</th>
      <th>Age</th>
      <th>Month</th>
      <th>Sex</th>
      <th>Subscription</th>
      <th>MainContact</th>
      <th>Weight</th>
      <th>Height</th>
      <th>LastPaidDate</th>
      <th>Father'sFullName</th>
      <th>Father'sAddress</th>
      <th>Father'sSubcity</th>
      <th>Father'sWoreda</th>
      <th>Father'sHouseNo</th>
      <th>Father'sPhoneNo</th>
