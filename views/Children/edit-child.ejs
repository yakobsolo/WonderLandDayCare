<!-- edit-child.ejs -->
<%- include('../layout') %>

<div class="container mt-4">
  <h1 class="mb-4">Child Edit</h1>
  <form action="/children/<%= child._id %>/edit" method="POST">
    <div class="form-row">
    <div class="col">
      <label for="name">Child's Name:</label>
      <input type="text" id="name" name="name" value="<%= child.name %>" placeholder="<%=child.parentName%>"  class="form-control" required>
    </div>
    <div class="col">
      <label for="parentName">Parent's Name:</label>
      <input type="text" id="parentName" name="parentName" value="<%= child.parentName %>" placeholder="<%=child.parentName%>" class="form-control" required>
    </div>
    <div class="col">
      <label for="grandParentName">GrandParent's Name:</label>
      <input type="text" id="grandParentName" name="grandParentName" value="<%= child.grandParentName %>" class="form-control" placeholder="<%=child.grandParentName%>" required>
    </div>
  </div>
  <div class="form-row">
  <div class="col">
    <label for="age">Age:</label>
    <input type="number" class="form-control" id="age" name="age"  value="<%= child.age %>" placeholder="<%= child.age %>" required>
  </div>
  <div class="col">
    <label for="month">Month:</label>

    <input type="number" class="form-control" id = "month" name="month" value="<%= child.month %>"  placeholder="<%= child.month %>" required>
  </div>
  <div class="col">
    <label for="height">Height(in Cm):</label>
    <input  type="number" class="form-control" id = "height" name="height" value="<%= child.height %>" placeholder="<%= child.height %>" required >

  </div>
  </div>
  <div  class="form-row">
    <div class="col">
      <label for="subscriptionType">Subscription Type:</label>
      <select id="subscriptionType" name="subscriptionType" class="form-control">
        <option value="<%= child.subscriptionType %>"><%= child.subscriptionType %></option>
        <option value="None">None</option>

        <% subscriptions.forEach(subscription => {
          if (subscription.name === 'Monthly-Above' || subscription.name === 'Monthly-Below' || subscription.name === 'Weekly') { %>
            <option value="<%= subscription.name %>"><%= subscription.name %></option>
          <% }
        }); %>  </select>
    </div>
    <div class="col">
      <label for="maincontact" >Main Contact:</label>
      <input  type="number" class="form-control" id = "maincontact" name="maincontact" value="<%= child.maincontact %>" placeholder="<%= child.maincontact %>" required >

    </div>
    <div class="col">
      <label for="weight" >Weight(in Kg):</label>
      <input  type="number" class="form-control" id = "weight" name="weight" value="<%= child.weight %>" placeholder="<%= child.weight %>" required >

    </div>
    </div>

