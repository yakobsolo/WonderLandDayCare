<!-- food-tracker.ejs -->
<%- include('../layout') %>

<div class="container mt-4">
  <h1 class="mb-4">Subscription Tracker for Child ID: <%= childId %></h1>
  <form action="/additions/<%= childId %>/subscribe" method="POST" class="mb-4">
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="subscription">Subscriptions:</label>
      <select id="subscription" name="subscription" class="form-control">
        <% subscriptions.forEach(subscription => { %>
          <option value="<%= subscription.name %>"><%= subscription.name %></option>
        <% }); %>
      </select>
      
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include('../partials/footer') %>
